#include <p18f4520.h>

#pragma config OSC = HS       
#pragma config WDT = OFF      
#pragma config LVP = OFF     
#pragma config PBADEN = OFF   

void myMsDelay(unsigned int time)
{
    unsigned int i, j;
    for (i = 0; i < time; i++)
        for (j = 0; j < 275; j++);
}


void main(void)
{
    
    TRISCbits.TRISC4 = 0;  
    TRISCbits.TRISC5 = 0;  
    TRISCbits.TRISC1 = 0;  


    PR2 = 0x4E;           
    CCP1CON = 0x0C;        
    T2CON = 0x07;         


    PORTCbits.RC4 = 1;
    PORTCbits.RC5 = 0;

    while (1)
    {
        CCP1CONbits.DC1B0 = 0;
        CCP1CONbits.DC1B1 = 1;
        CCPR1L = 0x13;
        myMsDelay(2000);

        CCP1CONbits.DC1B0 = 0;
        CCP1CONbits.DC1B1 = 0;
        CCPR1L = 0x27;
        myMsDelay(2000);

        CCP1CONbits.DC1B0 = 0;
        CCP1CONbits.DC1B1 = 1;
        CCPR1L = 0x3A;
        myMsDelay(2000);
    }
}
